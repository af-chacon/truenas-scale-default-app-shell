{
  "manifest_version": 2,
  "name": "TrueNAS Shell Selector",
  "version": "1.0",
  "description": "A Firefox extension that allows you to select and switch between different shells in TrueNAS",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "TrueNAS Shell Selector",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://scale.lan.aed.is/*",
        "*://*.truenas.com/*", 
        "*://*.truenas.org/*", 
        "*://*.ixsystems.com/*",
        "http://localhost/*",
        "http://localhost:80/*",
        "http://localhost:8000/*", 
        "http://localhost:8080/*",
        "http://localhost:8443/*",
        "https://localhost/*",
        "https://localhost:443/*",
        "https://localhost:8443/*"
      ],
      "js": ["content_scripts/shell-selector.js"]
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  }
}
